<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user, size: 80 %></h1>
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <br>
    <%= render 'users/follow_form' if logged_in? %>
  </aside>
  <div class="col-md-8">
    <% if @total > 0 %>
      <h3>Microposts (<%= @total %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>