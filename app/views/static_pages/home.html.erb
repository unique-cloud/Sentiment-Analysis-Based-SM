<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info center">
        <%= render 'shared/user_info' %>
      </section>
      <br>
      <section class="stats center">
        <%= render 'shared/stats' %>
      </section>
      <section class="center micropost_form">
        <br>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center">
  <h1>Welcome to the Ocean App</h1>
  <br>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>